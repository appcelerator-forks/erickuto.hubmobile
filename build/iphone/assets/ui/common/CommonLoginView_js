function CommonLoginView(){hub=require("hub");var e=require("ui/common/utilities");util=new e;var t=util.height_scale_factor,n=util.width_scale_factor;modal=!1,hub.API.osname==="mobileweb"&&(modal=!0);var r=Ti.UI.createWindow({backgroundColor:util.customBgColor,layout:"vertical",navBarHidden:!0,tabBarHidden:!0,modal:modal}),i=Ti.UI.createView({}),s=Ti.UI.createImageView({top:15*t,width:300*n,image:util.imagePath("ashoka_logo.png")}),o=Ti.UI.createView({top:0,height:120}),u=Ti.UI.createView({backgroundColor:"#e0e0e0",top:140*t,height:2*t}),a=Ti.UI.createView({top:145*t,width:util.app_width});i.add(u),o.add(s),i.add(a),i.add(o),i.add(Ti.UI.createLabel({left:20*n,height:50*t,bottom:1,font:{fontSize:12*t,fontFamily:util.customFont},color:util.customTextColor,text:"Copyright 2011 Ashoka "})),i.add(Ti.UI.createLabel({right:20*n,height:50*t,bottom:1,font:{fontSize:12*t,fontFamily:util.customFont},color:util.customTextColor,text:"hub.ashoka.org "})),r.add(i);var f;Ti.Platform.name==="iPhone OS"?f=Ti.UI.iPhone.ActivityIndicatorStyle.BIG:f=Ti.UI.ActivityIndicatorStyle.BIG,indicatorHolder=Ti.UI.createView({height:"100",backgroundColor:"#000",layout:"horizontal",width:"90%",opacity:.8}),indicator=Ti.UI.createActivityIndicator({style:f,font:{fontFamily:"Arial",fontSize:18,fontWeight:"bold"},color:"#FFF",height:70,width:70,left:5}),indicatorLabel=Ti.UI.createLabel({font:{fontFamily:"Arial",fontSize:18,fontWeight:"bold"},color:"#FFF",text:"Loading...",width:"auto",height:"auto",left:"10"}),indicatorHolder.add(indicator),indicatorHolder.add(indicatorLabel);var l=Ti.UI.createWindow({backgroundColor:"#000",opacity:.5,navBarHidden:!0});l.add(indicatorHolder),this.addContent=function(e){a.add(e)},this.showNavBar=function(){if(hub.API.osname==="android")return;r.navBarHidden=!1,r.tabBarHidden=!1},this.hideNavBar=function(){if(hub.API.osname==="android")return;r.navBarHidden=!0,r.tabBarHidden=!0},this.showIndicator=function(e){function s(){i>=n&&(l.close(),clearInterval(hub.API.loaderAnimate)),i>=r&&(indicatorLabel.text="Hub mobile is taking too long to respond please try again in a few minutes."),i+=t,Ti.API.info(i/1e3)}e===""?indicatorLabel.text="Loading...":indicatorLabel.text=e;var t=1e3,n=1e4,r=7e3,i=0;hub.API.loaderAnimate=setInterval(s,t),l.addEventListener("open",function(e){indicator.show()}),l.open()},this.hideIndicator=function(){l.close(),clearInterval(hub.API.loaderAnimate)},CommonLoginView.prototype.appwin=r}module.exports=CommonLoginView