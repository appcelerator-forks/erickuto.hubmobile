function openWindow(e){Ti.App.globalWindow=e,Ti.App.fireEvent("openWindow",{})}function ActivityScreen(){var e=!1,t,n,r,i,s=function(){if(e)return;i=Ti.UI.createWindow({titleControl:!1,modal:!0,navBarHidden:!0,tabBarHidden:!0}),t=Ti.UI.createView({height:"100%",width:"100%",backgroundColor:"#000",opacity:.5,zIndex:8}),t.hide(),i.add(t),n=Ti.UI.createView({height:"100%",width:"100%",zIndex:9}),n.hide(),i.add(n),openWindow(i);var s;Ti.Platform.name==="iPhone OS"?s=Ti.UI.iPhone.ActivityIndicatorStyle.DARK:s=Ti.UI.ActivityIndicatorStyle.DARK,r=Ti.UI.createActivityIndicator({font:{fontFamily:"Arial",fontSize:18,fontWeight:"bold"},color:"#FFF",message:"Loading...",height:"100%",width:"auto"}),n.add(r),e=!0};this.show=function(e){s(),e?r.message=e:r.message="Loading...",t.show(),n.show(),r.show()},this.hide=function(){Ti.API.info("Page Loaded now we can "),s(),t.hide(),n.hide(),r.hide(),Ti.App.globalWindow=i,Ti.App.fireEvent("closeWindow")}}module.exports=ActivityScreen